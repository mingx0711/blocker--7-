{
  "manifest_version": 3,
  "name": "Flashcard & Quiz for new tab Extension",
  "version": "1.8.0.0",
  "description": "Displays a flashcard or test every time a new page is opened.Add vocab automatically",
  "permissions": ["storage","*://*.wiktionary.org/*"],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "content_security_policy": {
    "script-src": "'self'",
    "object-src": "'self'"
  },
  "chrome_url_overrides": {
    "newtab": "newtab/newtab.html"
  },
  "background": {
    "service_worker": "server.js"
  }, 
  "host_permissions": [
    "https://en.wiktionary.org/*"
  ]

  
}